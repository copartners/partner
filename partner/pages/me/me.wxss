/* pages/me/me.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30px 0;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #8a8a8a;
}

.menu-item {
  background-color: #fff;
  height: 50px;
  line-height: 50px;
  font-size: 17px;
  color: #333;
  padding-left: 20px;
  border-bottom: 1px solid #ccc;
}

.icon {
  width: 20px;
  height: 20px;
  float: right;
  margin: 15px 10px;
}
